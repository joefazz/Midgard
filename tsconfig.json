{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node", "jest"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
